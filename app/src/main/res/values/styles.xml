<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="EnviromentCard">
        <item name="android:background">@color/envCardColor</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Card">
        <item name="android:background">@drawable/tasks_item_hold_background</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="RoundClickableItem">
        <item name="android:background">@drawable/profile_holder_background</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">false</item>
    </style>


</resources>
